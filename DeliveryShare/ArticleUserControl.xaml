<UserControl
    x:Class="DeliveryShare.ArticleUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DeliveryShare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="150"
    d:DesignWidth="700"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10" Background="{StaticResource subColor}">
            <WrapPanel>
                <Label
                    x:Name="FoodCategoryLabel"
                    Content="음식카테고리"
                    FontSize="15" />
                <Label
                    x:Name="PlaceLabel"
                    Content="장소"
                    FontSize="15" />
                <Label
                    x:Name="PeopleCountLabel"
                    Content="3"
                    FontSize="15" />

            </WrapPanel>
            <TextBlock
                x:Name="TitleTextBlock"
                Margin="5"
                FontSize="20"
                FontWeight="Bold"
                Text="제목" />

            <TextBlock
                x:Name="ContentTextBlock"
                Height="50"
                Margin="5"
                FontSize="15"
                Text="본문" />
        </StackPanel>
    </Grid>
</UserControl>
